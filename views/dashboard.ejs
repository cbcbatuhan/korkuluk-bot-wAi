    <script>
    async function createMuteRole() {
        try {
            // Butonu devre dƒ±≈üƒ± bƒ±rak
            const button = document.querySelector('button[onclick="createMuteRole()"]');
            button.disabled = true;
            button.textContent = 'Rol Olu≈üturuluyor...';

            const guildId = '<%= guild.id %>';
            const response = await fetch(`/server/${guildId}/settings/mute/create-role`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();
            
            if (data.success) {
                // Rol se√ßim listesini g√ºncelle
                const muteRoleSelect = document.getElementById('muteRole');
                const option = new Option(data.roleName, data.roleId, true, true);
                muteRoleSelect.add(option);
                
                // Ba≈üarƒ± mesajƒ± g√∂ster
                showAlert('success', '‚úÖ Susturma rol√º ba≈üarƒ±yla olu≈üturuldu');
            } else {
                // Eƒüer rol zaten varsa, o rol√º se√ß
                if (data.roleId && data.roleName) {
                    const muteRoleSelect = document.getElementById('muteRole');
                    const existingOption = Array.from(muteRoleSelect.options).find(opt => opt.value === data.roleId);
                    
                    if (!existingOption) {
                        const option = new Option(data.roleName, data.roleId, true, true);
                        muteRoleSelect.add(option);
                    } else {
                        existingOption.selected = true;
                    }
                }
                throw new Error(data.error || 'Rol olu≈üturulurken bir hata olu≈ütu');
            }
        } catch (error) {
            // Hata mesajƒ± g√∂ster
            showAlert('danger', `‚ùå ${error.message}`);
        } finally {
            // Butonu tekrar aktif et
            const button = document.querySelector('button[onclick="createMuteRole()"]');
            button.disabled = false;
            button.textContent = 'Yeni Rol Olu≈ütur';
        }
    }

    // Alert g√∂sterme fonksiyonu
    function showAlert(type, message) {
        // Varolan alertleri temizle
        const existingAlerts = document.querySelectorAll('.alert');
        existingAlerts.forEach(alert => alert.remove());

        // Yeni alert olu≈ütur
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type}`;
        alertDiv.innerHTML = message;

        // Alert'i sayfaya ekle
        const container = document.querySelector('.container');
        container.insertBefore(alertDiv, container.firstChild);

        // 5 saniye sonra alert'i kaldƒ±r
        setTimeout(() => {
            alertDiv.style.opacity = '0';
            setTimeout(() => alertDiv.remove(), 500);
        }, 5000);
    }
    </script>
</body>
